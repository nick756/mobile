<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/main_background_color"
    android:padding="5dp"
    android:clickable="false">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="element"
        android:background="@drawable/user_name_background"
        android:clickable="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_in_bound"
            android:layout_margin="5dp"
            android:id="@+id/in_out_bound"
            android:tag="image"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:tag="text"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:id="@+id/name_operation"
            android:textStyle="bold"
            android:clickable="false"
            android:layout_toRightOf="@+id/in_out_bound"
            android:layout_centerVertical="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/isChecked"
            android:tag="check"
            android:layout_alignBottom="@+id/in_out_bound"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:layout_centerVertical="true"
            android:checked="true"
            android:clickable="true"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>