<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/base_layout_before_transaction_id"
    android:background="@drawable/base_layout_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/operations_background"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="element"
            android:background="@drawable/user_name_background"
            android:id="@+id/operation_name_trans_id"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_name_transaction"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="name"
                android:tag="name"
                android:layout_gravity="center|right"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="element"
            android:background="@drawable/user_name_background"
            android:id="@+id/inbound_outbound_id"
            android:layout_below="@+id/operation_name_trans_id"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_in_bound"
                android:layout_margin="5dp"
                android:focusable="false" />
            <ImageView
                android:tag="inbound"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_checked"
                android:layout_margin="5dp"
                android:focusable="false" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:id="@+id/date_transaction_id"
        android:layout_below="@+id/relativeLayout"
        android:background="@drawable/base_layout_background"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999.99"
        android:id="@+id/amount_transaction_id"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_below="@+id/date_transaction_id"
        android:background="@drawable/base_layout_background"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description  Description"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_below="@+id/amount_transaction_id"
        android:layout_margin="5dp"
        android:background="@drawable/base_layout_background" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_button_trans_id"
        android:layout_below="@+id/textView"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/login_button_selector" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Transaction"
        android:id="@+id/ok_transaction"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_selector"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/cancel_button_trans_id"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp" />


</RelativeLayout>