<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/base_layout_background"
        android:id="@+id/template_operations_id"
        android:padding="5dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="element"
        android:background="@android:color/white"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_in_bound"
            android:tag = "in_out_bound"
            android:id="@+id/img_in_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_in_out"
            android:text="name"
            android:tag="name"
            android:layout_centerVertical="true"
            android:id="@+id/name_opeartion"
            android:textStyle="bold"
            android:lines="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgTransaction"
            android:tag ="transaction_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_transaction_button"
            android:layout_marginRight="5dp"
            android:clickable="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="element"
        android:background="@android:color/white"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_financial_type"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/img_op" />

        <TextView
            android:tag="type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="type"
            android:id="@+id/type_operation"
            android:textStyle="bold"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_op"
        />


    </RelativeLayout>

</LinearLayout>