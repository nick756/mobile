<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/operations_background"
        android:padding="10dp"
    android:id="@+id/template_operations_id">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_name_background"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_touch"
            android:layout_margin="5dp" />

        <TextView
            android:tag="code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="code"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:id="@+id/code_operation"
            android:textStyle="bold"
            android:textSize="@dimen/font_size" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_name_background"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_percent"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="name"
            android:tag="name"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:id="@+id/name_opeartion"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_name_background"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_in_bound"
            android:layout_margin="5dp" />
        <ImageView
            android:tag="inbound"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/ic_checked"
            android:layout_margin="5dp"
            android:id="@+id/inbound_icon" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_name_background"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_out_bound"
            android:layout_margin="5dp" />
        <ImageView
            android:tag="outbound"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/ic_uncheck"
            android:layout_margin="5dp"
            android:id="@+id/out_bound_icon" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_name_background"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_finance_type"
            android:layout_margin="5dp" />

        <TextView
            android:tag="type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="type"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:id="@+id/type_operation"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>