<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context="com.nova.sme.sme01.RegularLoginActivity"
    android:background="@drawable/base_layout_background"
    android:id="@+id/base_layout_reg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/sub_base_reg_id"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/reg_user_name_id"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ordinary_text_background"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/reg_company_name_id"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ordinary_text_background"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/reg_originator_id"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ordinary_text_background"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/reg_role_id"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ordinary_text_background"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Perform Transaction"
            android:id="@+id/reg_perf_trans_id"
            android:layout_below="@+id/sub_base_reg_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_button_selector"
            android:onClick="clickButton"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="View Transactions"
            android:id="@+id/reg_view_trans_id"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:onClick="clickButton"
            android:background="@drawable/login_button_selector"
            android:layout_below="@+id/reg_perf_trans_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Synchronize Operations List"
            android:id="@+id/reg_sop_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:onClick="clickButton"
            android:background="@drawable/login_button_selector"
            android:layout_below="@+id/reg_view_trans_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/reg_logout_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:onClick="clickButton"
            android:background="@drawable/login_button_selector"
            android:layout_below="@+id/reg_sop_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</RelativeLayout>
