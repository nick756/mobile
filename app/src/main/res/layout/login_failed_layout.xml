<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:id="@+id/base_failed_layout">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_failed_layout"
        android:focusableInTouchMode="true"
        android:background="@drawable/base_layout_background"
        android:padding="10dp">

        <ImageView
            android:id="@+id/custom_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_locked"
            android:layout_margin="10dp"
            android:background="@drawable/base_layout_background" />

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/custom_dialog_icon"
            android:textStyle="bold"
            android:text="Error"
            android:textColor="#ff4e4e4e"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/data_layout_background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Ok "
            android:layout_below="@+id/dialog_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_button_selector" />

    </RelativeLayout>

</LinearLayout>