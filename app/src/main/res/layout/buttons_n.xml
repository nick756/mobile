<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/dialog_layout"
    android:id="@+id/new_buttons_base">

    <ScrollView android:layout_height="250dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/buttons_scroll"
        android:layout_marginTop="5dp"
        android:id="@+id/sv_spinner_id">
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/buttons_base_scroll_n"
            android:padding="5dp">


        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ok_cancel_buttons_new">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Accept"
            android:id="@+id/ok_button_theme"
            android:background="@drawable/login_button_selector" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/cancel_button_theme"
            android:background="@drawable/login_button_selector"
            android:layout_marginLeft="5dp" />

    </LinearLayout>


</LinearLayout>